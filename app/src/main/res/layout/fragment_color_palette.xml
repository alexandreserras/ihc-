<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/color_palette"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorSoftGrey"
    tools:context=".ColorPaletteFragment">

        <RadioButton
            android:id="@+id/color_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorMarkerBlue" />

        <RadioButton
            android:id="@+id/color_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorMarkerGreen" />

        <RadioButton
            android:id="@+id/color_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorMarkerYellow" />

        <RadioButton
            android:id="@+id/color_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorMarkerRed" />

        <RadioButton
            android:id="@+id/color_orange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorMarkerOrange" />

        <RadioButton
            android:id="@+id/color_purple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorMarkerPurple" />

        <RadioButton
            android:id="@+id/color_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorMarkerNone" />

</RadioGroup>